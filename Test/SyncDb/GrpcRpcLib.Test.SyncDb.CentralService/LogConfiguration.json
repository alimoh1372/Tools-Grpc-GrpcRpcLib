{
  "LogConfiguration": {
    "LoggerType": "Normal",
    "SerilogSelfErrorLogs": "D:\\Logs\\Log-.json\\serilog-errors.log",
    "EnablePerformanceLogging": false,
    "EnableMethodCallTracking": false,
    "MaxObjectDepth": 1,
    "MaxCollectionItems": 0,
    "EnableAsyncLogging": true,
    "AsyncBufferSize": 10000,
    "AsyncFlushInterval": "00:00:01",
    "EnableContextualProperties": true,
    "EnableExceptionDetails": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Expressions"
    ],
    "Properties": {
      "ApplicationId": "CentralService-1",
      "ApplicationName": "CentralService"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Logger",
              "Args": {
                "configureLogger": {
                  "Filter": [
                    {
                      "Name": "ByIncludingOnly",
                      "Args": {
                        "expression": "@l in ['Information', 'Warning', 'Error', 'Fatal']"
                      }
                    }
                  ],
                  "WriteTo": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "D:\\Logs\\Log-.json",
                        "rollingInterval": "Day",
                        "retainedFileCountLimit": 30,
                        "rollOnFileSizeLimit": true,
                        "fileSizeLimitBytes": 10485760,
                        "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                        "buffered": true,
                        "flushToDiskInterval": "00:00:01"
                      }
                    }
                  ]
                }
              }
            }
          ],
          "bufferSize": 10000,
          "blockWhenFull": false
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Logger",
              "Args": {
                "configureLogger": {
                  "Filter": [
                    {
                      "Name": "ByIncludingOnly",
                      "Args": {
                        "expression": "@l = 'Information'"
                      }
                    }
                  ],
                  "WriteTo": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "D:\\Logs\\Logs/Information-.txt",
                        "outputTemplate": "Level      :{Level:u3}{NewLine}Message    :{Message}{NewLine}Time       :{Timestamp:yyyy-MM-dd HH:mm:ss.fff}{NewLine}Properties :{Properties:j}{NewLine}Exception  :{Exception}{NewLine}*******************************{NewLine}",
                        "fileSizeLimitBytes": 268435456,
                        "rollingInterval": "Day",
                        "retainedFileCountLimit": 10,
                        "rollOnFileSizeLimit": true,
                        "restrictedToMinimumLevel": "Information",
                        "buffered": true,
                        "flushToDiskInterval": "00:00:01"
                      }
                    }
                  ]
                }
              }
            }
          ],
          "bufferSize": 10000,
          "blockWhenFull": false
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Logger",
              "Args": {
                "configureLogger": {
                  "Filter": [
                    {
                      "Name": "ByIncludingOnly",
                      "Args": {
                        "expression": "@l in ['Error', 'Fatal']"
                      }
                    }
                  ],
                  "WriteTo": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "D:\\Logs\\Logs/Error-.json",
                        "rollingInterval": "Day",
                        "retainedFileCountLimit": 30,
                        "rollOnFileSizeLimit": true,
                        "fileSizeLimitBytes": 10485760,
                        "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                        "restrictedToMinimumLevel": "Error",
                        "buffered": true,
                        "flushToDiskInterval": "00:00:01"
                      }
                    }
                  ]
                }
              }
            }
          ],
          "bufferSize": 5000,
          "blockWhenFull": false
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithThreadName",
      "WithProcessName"
    ]
  }
}